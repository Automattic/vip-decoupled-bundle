{
    "name": "automattic/vip-bundle-decoupled",
    "description": "A WordPress plugin bundle to support decoupled WordPress",
    "type": "wordpress-plugin",
    "require-dev": {
        "php": ">=7.0",
        "wp-coding-standards/wpcs": "^2.3",
        "automattic/vipwpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "phpunit/phpunit": "^8",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs-fix": "phpcbf",
        "test": "wp-env run tests-cli --env-cwd=wp-content/plugins/vip-decoupled-bundle phpunit",
        "test-multisite": "wp-env run tests-cli --env-cwd=wp-content/plugins/vip-decoupled-bundle phpunit 'WP_MULTISITE=1'"
    },
    "license": "GPL-2.0-or-later",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
