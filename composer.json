{
    "name": "automattic/vip-bundle-decoupled",
    "description": "A WordPress plugin bundle to support decoupled WordPress",
    "type": "wordpress-plugin",
    "require-dev": {
        "php": ">=7.0",
        "wp-coding-standards/wpcs": "^2.3",
        "automattic/vipwpcs": "^2.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "phpunit/phpunit": "^7",
        "yoast/phpunit-polyfills": "^1.0",
        "wp-phpunit/wp-phpunit": "^5.9"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs-fix": "phpcbf",
        "test": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/vip-decoupled-bundle/phpunit.xml.dist --verbose'"
    },
    "license": "GPL-2.0-or-later",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
